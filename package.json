{
  "name": "agendash",
  "version": "1.0.0",
  "description": "Agenda Dashboard",
  "main": "app.js",
  "bin": "bin/agendash-standalone.js",
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "test": "run-p lint ava",
    "lint": "xo",
    "ava": "ava -v -c 1"
  },
  "keywords": [
    "agenda"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agenda/agendash.git"
  },
  "bugs": {
    "url": "https://github.com/agenda/agendash/issues"
  },
  "homepage": "https://github.com/agenda/agendash#readme",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "@hapi/inert": "6.0.1",
    "agenda": "^3.1.0",
    "async": "^3.2.0",
    "body-parser": "^1.15.0",
    "commander": "^2.9.0",
    "express": "^4.0.0",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "ava": "^3.7.1",
    "npm-run-all": "^4.1.2",
    "supertest": "^3.0.0",
    "xo": "^0.29.1"
  },
  "xo": {
    "space": 2,
    "rules": {
      "unicorn/prevent-abbreviations": "off",
      "promise/prefer-await-to-then": "off",
      "no-unused-vars": "off",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "max-params": [
        "error",
        5
      ],
      "max-nested-callbacks": [
        "error",
        5
      ]
    },
    "envs": [
      "node"
    ],
    "ignores": [
      "public/**/*"
    ]
  }
}
